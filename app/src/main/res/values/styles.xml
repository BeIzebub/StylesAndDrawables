<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ScoreButton" parent="AppTheme">
        <item name="android:width">72dp</item>
        <item name="android:height">72dp</item>
        <item name="android:background">@drawable/score_button_background</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="PositiveScoreButton" parent="ScoreButton">
        <item name="android:text">+</item>
    </style>

    <style name="NegativeScoreButton" parent="ScoreButton">
        <item name="android:text">-</item>
    </style>

</resources>
